<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import org.controlsfx.glyphfont.Glyph?>

<?import javafx.scene.layout.BorderPane?>
<fx:root stylesheets="@EditableText.css" type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane fx:id="showMode">
        <center>
            <Label fx:id="contentShow" text="Label" BorderPane.alignment="CENTER_LEFT"/>
        </center>
        <right>
        <Button fx:id="edit" onAction="#edit" visible="false">
            <graphic>
                <Glyph fontFamily="FontAwesome" icon="pencil" />
            </graphic>
        </Button>
        </right>
    </BorderPane>
    <BorderPane fx:id="editMode">
        <center>
        <TextField fx:id="contentEdit" BorderPane.alignment="CENTER_LEFT"/>
        </center>
        <right>
            <HBox>
                <Button onAction="#save">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="check" />
                </graphic>
            </Button>
                <Button onAction="#cancel">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="times" />
                    </graphic>
                </Button></HBox>

        </right>
    </BorderPane>
</fx:root>
